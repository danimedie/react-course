{
  "eslint.workingDirectories": [
    { "directory": "./", "changeProcessCWD": true }
  ],
  "eslint.packageManager": "npm",

  "eslint.run": "onSave",

  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },

  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ]
}
